<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTDMapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boot.data.mapper.ChatMapperInter">
	<select id="ckChatRoom" parameterType="chat">
		select count(*) from chat where room_id=#{room_id} and receiver=#{receiver} and sender=#{sender}
	</select>
	<insert id="insertChat" parameterType="chat">
		insert into chat values(null, #{room_id},#{receiver}, #{sender},#{content},1,now())
	</insert>
	<select id="getChatListByRoomID" parameterType="int" resultType="chat">
		select * from chat where room_id=#{room_id} order by chat_id desc
	</select>
</mapper>